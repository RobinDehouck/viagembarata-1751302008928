---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Seu guia completo" } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-blue-600">
              ViagemBarata
            </a>
          </div>
          <nav class="flex space-x-8">
            <a href="/" class="flex items-center px-1 pt-1 text-gray-900 hover:text-blue-600">In√≠cio</a>
            <a href="/blog" class="flex items-center px-1 pt-1 text-gray-900 hover:text-blue-600">Blog</a>
          </nav>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-white border-t">
      <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="text-center text-gray-500">
          <p>&copy; 2024 ViagemBarata. Todos os direitos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>