---
export interface Props {
  metadata?: any;
}

const { metadata = {} } = Astro.props;
const { title = 'ViagemBarata', description = 'Seu guia completo sobre viagem' } = metadata;
---

<!DOCTYPE html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
  </head>
  <body class="antialiased text-default bg-page tracking-tight">
    <!-- Header -->
    <header class="sticky top-0 z-40 flex-none mx-auto w-full bg-white border-b border-gray-50 dark:bg-slate-900 dark:border-slate-800">
      <div class="absolute inset-0"></div>
      <div class="relative text-default py-3 px-3 md:px-6 mx-auto w-full md:flex md:justify-between max-w-7xl">
        <div class="mr-auto rtl:mr-0 rtl:ml-auto flex justify-between">
          <a class="flex items-center" href="/">
            <span class="ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 dark:text-white">
              ViagemBarata
            </span>
          </a>
        </div>
        <nav class="items-center w-full md:w-auto hidden md:flex text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:mx-5">
          <ul class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-[0.9375rem] tracking-[0.01rem] font-medium">
            <li>
              <a class="font-medium hover:text-link dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out" href="/">
                Início
              </a>
            </li>
            <li>
              <a class="font-medium hover:text-link dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out" href="/blog">
                Blog
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 dark:border-slate-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
          <div class="text-sm text-muted dark:text-slate-400">
            © 2024 ViagemBarata. Todos os direitos reservados.
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>